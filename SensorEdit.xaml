<Window x:Class="SoSe22_SE_SmartHome.SensorEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoSe22_SE_SmartHome"
        mc:Ignorable="d"
        Title="Sensor ändern" Height="205" Width="295">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Button Content="{x:Static local:Resources.de_save}" Click="OnSaveButtonPressed" IsCancel="True" HorizontalAlignment="Left" Margin="105,60,0,0" VerticalAlignment="Top" Height="40" Width="80" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox Name="SensorNameBox" Text="" HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" Height="18" Grid.RowSpan="2"/>
        <Label Content="Neuer Sensorname:" HorizontalAlignment="Left" Margin="15,30,0,0" VerticalAlignment="Top" Height="26" Width="120" Grid.RowSpan="2"/>
    </Grid>
</Window>
